{
  "name": "scikit-learn-ts",
  "version": "0.1.0",
  "private": true,
  "description": "Use Python's #1 machine learning library from Node.js",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "repository": "transitive-bullshit/scikit-learn-ts",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:lib": "path-exists packages/sklearn/src/generated || run-s generate",
    "build:tsup": "lerna run build --no-private && tsup",
    "build:tsc": "tsc --build",
    "prebuild": "del build packages/sklearn/build",
    "clean": "run-s prebuild pregenerate",
    "generate": "tsx bin/generate-sklearn.ts",
    "pregenerate": "del packages/sklearn/src/generated",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pretest": "run-s build",
    "test": "run-p test:*",
    "test:unit": "ava",
    "test:prettier": "prettier '**/*.{js,jsx,ts,tsx}' --check",
    "test:sklearn": "lerna run test --scope sklearn --stream"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "^18.14.4",
    "@types/prettier": "^2.7.2",
    "ava": "^5.2.0",
    "camelcase": "^7.0.1",
    "cheerio": "1.0.0-rc.12",
    "del-cli": "^5.0.0",
    "dotenv": "^16.0.3",
    "got": "^12.6.0",
    "husky": "^8.0.3",
    "indent-string": "^5.0.0",
    "is-relative-url": "^4.0.0",
    "lerna": "^6.5.1",
    "lint-staged": "^13.0.3",
    "mkdirp": "^2.1.5",
    "npm-run-all": "^4.1.5",
    "p-map": "^5.5.0",
    "path-exists-cli": "^2.0.0",
    "prettier": "^2.8.3",
    "sklearn": "workspace:./packages/sklearn",
    "tsup": "^6.6.3",
    "tsx": "^3.12.2",
    "typescript": "^4.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "ava": {
    "files": [
      "src/**/*.test.ts",
      "test/**/*.ts",
      "!build"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=tsx"
    ]
  },
  "keywords": [
    "scikit",
    "learn",
    "sklearn",
    "machine learning",
    "ml",
    "ai"
  ]
}
